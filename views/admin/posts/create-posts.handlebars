<h3>Create A Post</h3>
{{#each errors}}
<div class="alert alert-danger">
    {{message}}
</div>   
{{/each}}
<div class="form-group">
    <form action="/admin/posts/create" method="POST" enctype="multipart/form-data">
    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input name="title" type="text" class="form-control" id="title" placeholder="Enter Title" required>
        </div>
    </div>
    <div class="form-group row">
        <label for="subtitle" class="col-sm-2 col-form-label">Subtitle</label>
        <div class="col-sm-10">
            <input name="subtitle" type="text" class="form-control" id="subtitle" placeholder="Subtitle">
        </div>
    </div>
    <div class="form-group row">
        <label for="body" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea name ="body" type="text" rows="6" class="form-control" id="body" placeholder="description"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">File</div>
        <div class="col-sm-10">
            <div class="custom-file">
                <input type="file" class="custom-file-input"  id="customFile" name="file" required >
                <label for="file" class="custom-file-label">Choose File</label>
            </div>
        </div>
    </div>
    <div class="form-group row">    
        <div class="col-sm-2">Select</div>
        <div class="col">
            <select name="category" class="custom-select custom-select-sm form-control">
                <option selected>category</option>
                {{#each categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col">
            <select name="status" id="status" class="custom-select custom-select-sm form-control">
                <option selected>Status</option>
                <option value="public">Public</option>
                <option value="private">Private</option>
                <option value="draft">Draft</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">Comments</div>
        <div class="col-sm-2">
            <div class="form-check">
                <input name="allowComments" type="checkbox" id="allowComments" class="form">
                <label class="form-check-label" for="allowComments">Allow</label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
</form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
<script>
    bsCustomFileInput.init();
</script>